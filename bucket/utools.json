{
    "homepage": "https://u.tools/",
    "description": "Your productive tools set and launcher.",
    "license": "Unknown",
    "version": "2.4.1",
    "architecture": {
        "64bit": {
            "url": "https://publish.u-tools.cn/version2/uTools-2.4.1.exe#/dl.7z",
            "hash": "sha512:695e3df83ce3cd2018692db0396d6e601b47033c3e7f199ad33a51bd0f07b191cd0d3e848032e4d823ae176af7679d61f50ad9f9040c323eaa867f6269f9c041",
            "installer": {
                "script": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR/app-64.7z\" \"$dir\""
            }
        }
    },
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninstall uTools.exe\" -Force -Recurse",
    "shortcuts": [
        [
            "uTools.exe",
            "uTools"
        ]
    ],
    "checkver": {
        "url": "https://publish.u-tools.cn/version2/latest.yml?",
        "regex": "version: ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://publish.u-tools.cn/version2/uTools-$version.exe#/dl.7z",
                "hash": {
                    "url": "https://publish.u-tools.cn/version2/latest.yml?",
                    "mode": "extract",
                    "regex": "(?sm)$version.exe.*?sha512: $base64"
                }
            }
        }
    }
}
